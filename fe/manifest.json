{
  "manifest_version": 3,
  "name": "LeetCode GitHub Tracker",
  "version": "1.0.0",
  "description": "Automatically push LeetCode solutions to GitHub with screenshots",
  
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}